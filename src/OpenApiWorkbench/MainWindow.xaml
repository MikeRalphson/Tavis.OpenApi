<Window x:Class="OpenApiWorkbench.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenApiWorkbench"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="259.333"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtInput" Margin="10" TextWrapping="Wrap" Text="TextBox" AcceptsReturn="True" />
        <Button Content="Validate" HorizontalAlignment="Left" Height="20" Margin="10" VerticalAlignment="Top" Width="131" Click="Button_Click" Grid.Column="1"/>
        <TextBlock x:Name="txtErrors" Margin="10,57,10,10" TextWrapping="Wrap" Text="TextBlock"  Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Grid.Column="1"/>

    </Grid>
</Window>
